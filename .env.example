# Runtime
APP_ENV=dev
LOG_LEVEL=INFO
TZ=Asia/Shanghai

# Pipeline
DRY_RUN=true
TARGET_ARTICLE_COUNT=10
DOMESTIC_RATIO=0.6
MIN_TIER_A_RATIO=0.7
QUALITY_THRESHOLD=80
ALLOW_GOOGLE_REDIRECT_CITATION=false
STRICT_WEB_PUBLISHED_AT=true
MAX_ENTRIES_PER_SOURCE=3

# LLM (optional)
LLM_API_KEY=
LLM_BASE_URL=https://api.agentify.top/v1/chat/completions
LLM_MODEL=openai/gpt-oss-120b
LLM_MAX_TOKENS=6000
LLM_TEMPERATURE=0.1

# WeChat Official Account
WECHAT_ENABLE_PUBLISH=false
WECHAT_APP_ID=
WECHAT_APP_SECRET=
WECHAT_AUTHOR=飞行播客
WECHAT_THUMB_MEDIA_ID=
WECHAT_PROXY=
WEB_DIGEST_BASE_URL=
